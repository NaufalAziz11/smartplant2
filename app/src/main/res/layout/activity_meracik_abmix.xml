<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meracik_abmix"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#009e0f">



        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:onClick="back"
            app:srcCompat="@drawable/ic_left_arrow_angle"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meracik AB Mix"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    </FrameLayout>
    <ScrollView
        android:layout_marginTop="68dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/senyum_foreground"
                android:layout_marginStart="130dp"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:text="@string/_3_bahan"
                android:textSize="30sp"
                android:textColor="@color/putih"
                android:textAlignment="center"
                android:background="@color/biru"
                android:onClick="detil"
                />

            <Button
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:text="@string/_4_bahan"
                android:textSize="30sp"
                android:textColor="@color/putih"
                android:textAlignment="center"
                android:background="@color/biru"
                android:onClick="detil2"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:text="@string/_5_bahan"
                android:textSize="30sp"
                android:textColor="@color/putih"
                android:textAlignment="center"
                android:background="@color/biru"
                android:onClick="detil3"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:text="@string/_7_bahan"
                android:textSize="30sp"
                android:textColor="@color/putih"
                android:textAlignment="center"
                android:background="@color/abu"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:text="@string/_12_bahan"
                android:textSize="30sp"
                android:textColor="@color/putih"
                android:textAlignment="center"
                android:background="@color/abu"/>


        </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="740dp"
        android:background="#009e0f">

    </FrameLayout>


</RelativeLayout>



