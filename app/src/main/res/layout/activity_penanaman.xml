<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartplant.penanaman"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#009e0f">



        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:onClick="back"
            app:srcCompat="@drawable/ic_left_arrow_angle"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_penanaman"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    </FrameLayout>
    <ScrollView
        android:layout_marginTop="68dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="638dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pilih_tanaman"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"  />

        <Spinner
            android:layout_marginTop="50dp"
            android:layout_marginStart="175dp"
            android:id="@+id/cbbox"
            android:layout_width="wrap_content"
            android:entries="@array/lubang_tanam"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true" />
        <Button
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="75dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/pilih"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="180dp"
            app:srcCompat="@drawable/ic_spinach"
            android:onClick="pakcoy"
            android:contentDescription="@string/btnpakcoy" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:text="@string/txtpakcoy"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"

            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="180dp"
            android:onClick="btnselada"
            app:srcCompat="@drawable/ic_lettuce"
            android:contentDescription="@string/selada" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="250dp"
            android:text="@string/selada"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"

            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="180dp"
            app:srcCompat="@drawable/ic_mint"
            android:contentDescription="@string/mint" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="270dp"
            android:layout_marginTop="250dp"
            android:text="@string/mint"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"

            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="310dp"
            app:srcCompat="@drawable/ic_spinach1"
            android:contentDescription="@string/bayam" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="400dp"
            android:text="@string/bayam"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"

            />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="205dp"
            android:layout_marginTop="310dp"
            app:srcCompat="@drawable/ic_chili"
            android:contentDescription="@string/cabai" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="205dp"
            android:layout_marginTop="400dp"
            android:text="@string/cabai"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"

            />


    </FrameLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="720dp"
        android:background="#009e0f">

    </FrameLayout>


</RelativeLayout>



