<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PraktikSatu">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#009e0f">




        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/ic_left_arrow_angle"
            android:onClick="back"
            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/praktik"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="638dp"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/smartplant"
            android:textAlignment="center"
            android:textColor="#009e0f"
            android:textSize="35sp" />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="@string/aplikasi_edukasi_hidroponik"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="#009e0f"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selesai"
            android:layout_marginStart="150dp"
            android:layout_marginTop="150dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

            <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selamat"
            android:layout_marginStart="20dp"
            android:layout_marginTop="180dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            />

            <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:layout_marginStart="90dp"
            android:layout_marginTop="200dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            />




        <FrameLayout
            android:layout_marginTop="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="360dp"
            android:layout_height="190dp"/>

            <TableRow

                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/hasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baik"
                android:layout_marginStart="130dp"
                android:layout_marginTop="260dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                />











        <Button
            android:id="@+id/buttonNext"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="#009e0f"
            android:text="@string/end"
            android:layout_marginStart="130dp"
            android:layout_marginTop="350dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_below="@+id/radioGroupNb"
            android:onClick="menu"
            />





    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009e0f">

    </FrameLayout>

</LinearLayout>