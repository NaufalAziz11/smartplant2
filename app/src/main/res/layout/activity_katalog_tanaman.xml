<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".old.katalog_tanaman"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#009e0f">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:onClick="back"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/ic_left_arrow_angle"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tanaman"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            />
    </FrameLayout>

    <ScrollView
        android:layout_marginTop="68dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"

                    >

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="173dp"
                        android:layout_height="190dp"
                        app:srcCompat="@mipmap/pakcoy_foreground"
                        android:contentDescription="@string/poto_nutrisi1" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:text="@string/pakcoy"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="180dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id="@+id/multiAutoCompleteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="200dp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="0dp"
                        android:text="@string/pakcoy_des"
                        android:textSize="15sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="250dp"
                    >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="180dp"
                        android:text="@string/cabai"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/multiAutoCompleteTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="0dp"
                        android:textColor="@android:color/black"
                        android:text="@string/cabai_des"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="175dp"
                        android:layout_height="157dp"
                        app:srcCompat="@mipmap/cabai_foreground"
                        android:contentDescription="@string/poto_nutrisi1" />


                </FrameLayout>


            </FrameLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>