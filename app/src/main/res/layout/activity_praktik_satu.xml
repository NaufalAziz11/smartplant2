<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartplant.old.PraktikSatu"
    >



<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#009e0f">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            tools:srcCompat="@drawable/ic_left_arrow_angle"
            android:onClick="menu"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/praktik"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            />
    </FrameLayout>


        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="638dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/satu"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="278dp"
            android:layout_height="180dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="45dp"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="5dp"
            app:srcCompat="@mipmap/step_awal_foreground"
            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/des_satu"
            android:layout_marginStart="35dp"
            android:layout_marginTop="250dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            />




        <RadioGroup
            android:id="@+id/radioGroupNb"
            android:layout_below="@+id/text1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="270dp" >

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/sudah" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/belum"/>
        </RadioGroup>
        <Button
            android:id="@+id/Next"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="#009e0f"
            android:text="@string/next"
            android:layout_marginStart="220dp"
            android:layout_marginTop="350dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_below="@+id/radioGroupNb"
            android:onClick="step_dua"
            />

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009e0f">

    </FrameLayout>


</LinearLayout>