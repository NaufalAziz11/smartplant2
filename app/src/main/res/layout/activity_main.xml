<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.smartplant.MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009e0f"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="7dp"
            android:text="@string/smartplant"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="1dp"

            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="45dp"
            android:text="@string/aplikasi_edukasi_hidroponik"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="1dp"

            />

    </FrameLayout>

    <ScrollView
        android:layout_marginTop="90dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="120dp"
                android:contentDescription="@string/gpenanaman"
                android:onClick="btnpenanaman"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="165dp"
                tools:srcCompat="@drawable/ic_lettuce" />

            <TextView
            android:id="@+id/textView2"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="225dp"
            android:text="@string/penanaman1"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="263dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="120dp"
            android:contentDescription="@string/perawatan"
            android:onClick="Perawatan"

            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="165dp"
            tools:srcCompat="@drawable/ic_watering_can" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="225dp"
            android:text="@string/Perawatan"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="263dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="120dp"
            android:contentDescription="@string/nutrisi"
            android:onClick="Nutrisi"

            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="165dp"
            tools:srcCompat="@drawable/ic_nutrition" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="225dp"
            android:text="@string/Nutrisi"

            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="263dp" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="320dp"
            android:contentDescription="@string/praktik"
            android:onClick="Praktek_Tanam"

            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="165dp"
            tools:srcCompat="@drawable/ic_watering" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="420dp"
            android:text="@string/Praktek_Tanam"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="263dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="320dp"
            android:contentDescription="@string/katalog"
            android:onClick="Katalog"

            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="165dp"
            tools:srcCompat="@drawable/ic_pamphlet" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="420dp"
            android:text="@string/Katalog"

            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="263dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="320dp"
            android:contentDescription="@string/tentang"
            android:onClick="Tentang"

            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="165dp"
            tools:srcCompat="@drawable/ic_info_button" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="420dp"
            android:text="@string/Tentang"

            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="263dp" />


    </FrameLayout>

        </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="680dp"
        android:background="#009e0f">

    </FrameLayout>


</RelativeLayout>